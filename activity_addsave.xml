<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addsave">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/bigshot_one"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target is"
        android:textSize="18sp"
        android:fontFamily="@font/bigshot_one"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="80dp"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="130dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:fontFamily="@font/bigshot_one"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="180dp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="132dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/saving"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:textColorHighlight="@color/design_default_color_on_secondary"

            android:textColorLink="@color/design_default_color_on_secondary" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="270dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/note"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add note"
            android:textColorHighlight="@color/design_default_color_on_secondary"

            android:textColorLink="@color/design_default_color_on_secondary" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD IN SAVINGS"
        android:background="#000"
        android:textColor="#fff"
        android:layout_marginTop="450dp"
        android:id="@+id/sv"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECK RECORDS"
        android:background="#000"
        android:textColor="#fff"
        android:layout_marginTop="520dp"
        android:id="@+id/check"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:text="" />

</RelativeLayout>